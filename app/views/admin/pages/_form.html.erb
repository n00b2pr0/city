<%= form_for [:admin, @site, @page], :html => {:class => "full"} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :path %>
  <%= f.text_field :path %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.label "Layout" %>
  <%= f.text_field :layout_id %>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>
